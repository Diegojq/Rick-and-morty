---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap");
  :root {
    --rickBlack: rgba(26, 26, 26, 1);
    --mortyGray: rgba(30, 30, 32, 1);
    --portalGreen: rgba(49, 50, 52, 1);
    --portalBlue: rgba(17, 176, 200, 1);
    --meeseeksBlue: rgba(66, 180, 202, 1);
    --toxicGreen: rgba(191, 222, 66, 1);
    --portalWhite: rgba(255, 255, 255, 1);
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-size: 62.5%;
  }

  html {
    font-family: "Inter", sans-serif;
    background-color: var(--portalWhite);
  }
</style>
