---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
---

<Layout title="Welcome to Astro.">
  <Header />
  <section class="hero">
    <div class="left-container">
      <h1 class="left-container__title">
        Descubra todo en <br />un solo <span
          class="left-container__title--highlight">lugar.</span
        >
      </h1>
      <p class="left-container__description">
        Personajes. ubicaciones, episodios y más.
      </p>
      <div class="darkMode-buttons">
        <Button
          className="darkMode-buttons__dark"
          icon="/public/icons/Moon.svg"
          string="Oscuro"
        />
        <Button
          className="darkMode-buttons__light"
          icon="/public/icons/Sun.svg"
          string="Claro"
        />
      </div>
      <p class="left-container__description-2">
        ¡Wubba Lubba Dub Dub! Cuida tus ojos.
      </p>
    </div>
    <figure class="right-container">
      <img
        class="right-container__image"
        src="/public/images/HighLightImage.svg"
        alt="image rick and morty"
      />
    </figure>
  </section>
  <main></main>
</Layout>

<style>
  .hero {
    display: flex;
    justify-content: center;
    border-bottom: 0.2rem solid var(--portalBlue);
  }

  .left-container {
    margin-right: 48rem;
  }

  .left-container__title {
    margin-top: 6.4rem;
    font-weight: 700;
    font-size: 4.8rem;
    line-height: 5.8rem;
    color: var(--portalGreen);
  }

  .left-container__title--highlight {
    color: var(--portalBlue);
  }

  .left-container__description {
    margin-top: 2.4rem;
    font-weight: 400;
    font-size: 1.6rem;
    line-height: 1.9rem;
    color: var(--portalGreen);
  }

  .darkMode-buttons {
    display: flex;
    margin-top: 6.4rem;
    gap: 0.4rem;
  }

  .darkMode-buttons__dark {
    display: flex;
    align-items: center;
    background-color: var(--portalWhite);
    gap: 0.8rem;
  }

  .darkMode-buttons__light {
    display: flex;
    align-items: center;
    width: 7.6rem;
    height: 3.2rem;
    gap: 0.4rem;
    background-color: var(--portalBlue);
    color: var(--portalWhite);
  }

  .left-container__description-2 {
    font-weight: 400;
    font-size: 1.6rem;
    line-height: 1.9rem;
    color: var(--portalBlue);
    margin-top: 2.4rem;
  }

  .right-container {
    margin: 0;
  }

  .right-container__image {
    margin-top: 3.2rem;
    width: 43.5rem;
    height: 43.6rem;
  }

  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
